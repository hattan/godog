// For format details, see https://aka.ms/devcontainer.json
{
    "name": "godog",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu24.04",
    "features": {
      "ghcr.io/devcontainers/features/go:1": {
        "version": "1.23.2"
      },
      "ghcr.io/devcontainers-contrib/features/go-task:1": {},
    },
    "remoteUser": "vscode",
    "customizations": {
      "vscode": {
        "extensions": [
          "golang.go",
          "redhat.vscode-yaml",
          "task.vscode-task"
        ]
      }
    }
  }